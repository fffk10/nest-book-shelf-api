generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            Int     @id @default(autoincrement())
  title         String  @db.Text
  author        String  @db.Text
  isbn          String  @db.VarChar(20)
  publisher     String? @db.Text
  publishedDate String? @map("published_date") @db.Text
  description   String? @db.Text
  coverImage    String? @map("cover_image") @db.Text

  @@map("books")
}

model User {
  id       String @id @default(uuid()) @db.Uuid
  username String @unique @db.Text
  email    String @unique @db.Text
  password String @db.Text

  @@map("users")
}

model UserBook {
  id           Int       @id @default(autoincrement())
  userId       String    @map("user_id") @db.Uuid
  bookId       Int       @map("book_id") @db.Integer
  acquiredDate DateTime? @map("acquired_date") @db.Timestamp(3)

  @@map("user_books")
}
